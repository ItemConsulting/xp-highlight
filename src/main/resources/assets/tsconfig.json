{
  "extends": "../../../../tsconfig.json",
  "exclude": [
    "../../../../node_modules/typescript/lib/lib.es5.d.ts",
    "**/*.stories.ts"
  ],
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "compilerOptions": {
    //──────────────────────────────────────────────────────────────────────
    // Modules
    //──────────────────────────────────────────────────────────────────────
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "module": "ES2022",
    "paths": {},
    "rootDir": ".",

    //──────────────────────────────────────────────────────────────────────
    // Language and Environment
    //──────────────────────────────────────────────────────────────────────
    "lib": [
      "DOM",
      "ES2020",
    ],
    "skipLibCheck": true,
    "target": "ES2020" // Modern browsers
  }
}
